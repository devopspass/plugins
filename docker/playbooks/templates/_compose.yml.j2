version: '3'
services:
{% if mysql_enabled == 'true' %}
  mysql:
    image: mysql:latest
    ports:
      - "3306:3306"
    environment:
      - MYSQL_ROOT_PASSWORD=root_password
      - MYSQL_DATABASE=my_database
      - MYSQL_USER=my_user
      - MYSQL_PASSWORD=my_password
    volumes:
      - mysql_data:/var/lib/mysql
{% endif %}

{% if nginx_enabled == 'true' %}
  nginx:
    image: nginx:latest
    ports:
      - "{{ nginx_port }}:80"
    volumes:
      - "./nginx.conf:/etc/nginx/conf.d/default.conf"
{% endif %}

{% if app_enabled == 'true' %}
  app:
    build: ./
{% endif %}

{% if postgres_enabled == 'true' %}
  postgres:
    image: postgres:latest
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=my_user
      - POSTGRES_PASSWORD=my_password
      - POSTGRES_DB=my_database
    volumes:
      - postgres_data:/var/lib/postgresql/data
{% endif %}

{% if mongodb_enabled == 'true' %}
  mongodb:
    image: mongo:latest
    ports:
      - "27017:27017"
    volumes:
      - mongo_data:/data/db
{% endif %}

{% if redis_enabled == 'true' %}
  redis:
    image: redis:latest
    ports:
      - "6379:6379"
{% endif %}

volumes:
{% if mysql_enabled == 'true' %}
  mysql_data:
{% endif %}
{% if postgres_enabled == 'true' %}
  postgres_data:
{% endif %}
{% if mongodb_enabled == 'true' %}
  mongo_data:
{% endif %}
